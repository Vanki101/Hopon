<configuration>

  <!-- Rotasjon av loggfiler -->
  <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>logs/hopon.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>logs/hopon.%d{yyyy-MM-dd}.log</fileNamePattern>
      <maxHistory>7</maxHistory>
    </rollingPolicy>
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <!--  Konsoll -->
  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%highlight(%d{HH:mm:ss} %-5level [%logger{15}] - %msg%n)</pattern>
    </encoder>
  </appender>

  <!--  LoggnivÃ¥er -->
  <logger name="com.hopon.adapter.entur" level="DEBUG" />
  <logger name="com.hopon.core" level="INFO" />
  <logger name="com.hopon.app" level="INFO" />

  <root level="WARN">
    <appender-ref ref="CONSOLE" />
    <appender-ref ref="FILE" />
  </root>
</configuration>